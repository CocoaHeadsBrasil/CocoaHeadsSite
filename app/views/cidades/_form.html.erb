<%= form_for @cidade, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :cidade, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cidade, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estado, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :organizador, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :organizador, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :organizador_email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :organizador_email, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :website, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :website, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :github, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :github, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :twitter, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :facebook, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :published, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  cidades_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
