<%- model_class = Video -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:palestrante_id) %></dt>
      <dd><pre class="prettyprint"><%= @video.palestrante.nome %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:agenda_id) %></dt>
      <dd><pre class="prettyprint"><%= @video.agenda.descritivo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:titulo) %></dt>
      <dd><pre class="prettyprint"><%= @video.titulo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tags) %></dt>
      <dd><pre class="prettyprint"><%= render123_tags(@video.tags) %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descricao) %></dt>
      <dd><pre class="prettyprint"><%= @video.descricao.html_safe %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:youtube) %></dt>
      <dd><pre class="prettyprint"><%= @video.youtube %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published) %></dt>
      <dd><pre class="prettyprint"><%= @video.published ? "Sim" : "NÃ£o" %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              videos_path({:palestrante_id => @palestrante.id}), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_video_path(@video, {:palestrante_id => @palestrante.id}), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              video_path(@video, {:palestrante_id => @palestrante.id}),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>