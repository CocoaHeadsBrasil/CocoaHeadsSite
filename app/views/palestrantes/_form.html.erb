<%= error_messages_for(@palestrante) %>

<%= form_for @palestrante, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nome, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, :class => 'text_field form-control', :placeholder => "Não é exibido publicamente. Apenas para download do Gravatar.com" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :website, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :website, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :twitter, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :github, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :github, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :linkedin, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :linkedin, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, "Publicado?", :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box(:published, :class => 'text_field form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mini_curriculo, "Curriculo Resumido", :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :mini_curriculo, :class => 'text_field form-control', :placeholder => "Mini currículo do palestrante. De 03 a 06 linhas." %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  palestrantes_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
