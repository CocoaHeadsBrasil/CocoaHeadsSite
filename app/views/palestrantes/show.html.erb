<%- model_class = Palestrante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nome) %></dt>
      <dd><pre class="prettyprint"><%= @palestrante.nome %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @palestrante.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:website) %></dt>
      <dd><pre class="prettyprint"><%= @palestrante.website %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:twitter) %></dt>
      <dd><pre class="prettyprint"><%= @palestrante.twitter %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:github) %></dt>
      <dd><pre class="prettyprint"><%= @palestrante.github %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:linkedin) %></dt>
      <dd><pre class="prettyprint"><%= @palestrante.linkedin %></pre></dd>
      <dt class="label label-default">Currículo Resumido</dt>
      <dd><pre class="prettyprint"><%= @palestrante.mini_curriculo %></pre></dd>
      <dt class="label label-default">Publicado?</dt>
      <dd><pre class="prettyprint"><%= @palestrante.published ? "Sim" : "Não" %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.criar_novo_video', :default => t("helpers.videos.criar_novo_video")),
              {:controller => 'videos', :palestrante_id => @palestrante.id},
              :class => 'btn btn-success' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              palestrantes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_palestrante_path(@palestrante), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              palestrante_path(@palestrante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>