<%- model_class = Download -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:titulo) %></dt>
      <dd><pre class="prettyprint"><%= @download.titulo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @download.url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:autor) %></dt>
      <dd><pre class="prettyprint"><%= @download.autor %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posicao) %></dt>
      <dd><pre class="prettyprint"><%= @download.posicao %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              downloads_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_download_path(@download), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              download_path(@download),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>