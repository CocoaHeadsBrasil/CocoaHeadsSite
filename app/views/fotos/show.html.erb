<%- model_class = Foto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:agenda_id) %></dt>
      <dd><pre class="prettyprint"><%= @foto.agenda ? @foto.agenda.descritivo : 'Nenhuma agenda atribuida' %></pre></dd>
      <dt class="label label-default">Fotógrafo</dt>
      <dd><pre class="prettyprint"><%= @foto.descricao %></pre></dd>
      <dt class="label label-default">ID Album Flickr</dt>
      <dd><pre class="prettyprint"><%= @foto.flickr_album_id %></pre></dd>
      <dt class="label label-default">Publicado?</dt>
      <dd><pre class="prettyprint"><%= @foto.published ? "Sim" : "Não" %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:detalhes) %></dt>
      <dd><pre class="prettyprint"><%= @foto.detalhes.html_safe if !@foto.detalhes.blank? %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              {:action => :index}, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_foto_path(@foto), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              foto_path(@foto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>