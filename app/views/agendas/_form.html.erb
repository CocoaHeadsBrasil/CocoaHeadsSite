<%= form_for @agenda, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :horario, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :horario, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :local, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :local, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :maps, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :maps, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :passbook, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :passbook, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :published, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :descricao, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  agendas_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
