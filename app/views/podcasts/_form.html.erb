<%= error_messages_for(@podcast) %>

<%= form_for @podcast, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :soundcloud_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :soundcloud_url, :class => 'text_field form-control', :placeholder => "Não é exibido publicamente. Apenas para download do Gravatar.com" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :itunes_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :itunes_url, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  {:controller => 'podcasts', :action => 'index'}, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
