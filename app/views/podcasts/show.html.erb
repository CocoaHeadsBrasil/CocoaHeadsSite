<%- model_class = Podcast -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @podcast.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @podcast.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:created_at) %></dt>
      <dd><pre class="prettyprint"><%= @podcast.created_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:soundcloud_url) %></dt>
      <dd><pre class="prettyprint"><%= @podcast.soundcloud_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:itunes_url) %></dt>
      <dd><pre class="prettyprint"><%= @podcast.itunes_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tags) %></dt>
      <dd><pre class="prettyprint"><%= @podcast.tags %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),  {:controller => 'podcasts', :action => 'index'}, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_podcast_path(@podcast), :class => 'btn btn-default' %>
</div>