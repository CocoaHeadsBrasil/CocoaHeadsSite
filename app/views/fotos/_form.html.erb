<%= form_for @foto, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
      <%= f.label :agenda_id, "Agenda", :class => 'control-label col-md-2' %>
      <div class="col-md-10">
          <%= f.select(:agenda_id, [["Escolha uma agenda", '']] + @agendas.map {|a| [a.descritivo, a.id]}, {}, {:class => 'form-control'}) %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nome, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :flickr_album_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :flickr_album_id, :class => 'text_field form-control', :placeholder => "ID do album no Flickr. Ex.: 72157644045626843" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, "Publicado?", :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box(:published, :class => 'text_field form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= tinymce %>
    <%= f.label :descricao, "Descrição", :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :descricao, :class => "tinymce", :rows => 30, :cols => 120 %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  fotos_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
